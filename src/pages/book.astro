---
import Calendar from "../components/Calendar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Book an Appointment">
  <div class="flex flex-col justify-start items-center mx-auto px-5 py-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">Ready to start? Letâ€™s talk!</h1>
    <p class="text-xl text-gray-600 mb-6">
      Schedule a meeting with us using the calendar below.
    </p>
    <Calendar />
  </div>
</Layout>

<script>
  import { gsap } from "gsap";
  document.addEventListener("DOMContentLoaded", () => {
    gsap.from("h1", {
      duration: 1,
      y: 20,
      opacity: 0,
      ease: "power4.out",
    });

    gsap.from("p", {
      duration: 1,
      y: 20,
      opacity: 0,
      ease: "power4.out",
      delay: 0.2,
    });
  });
</script>
