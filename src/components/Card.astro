---
interface Props {
  title: string;
  body: string;
}

const {  title, body } = Astro.props;

---

<div id="card" class="bg-quaternary border-none rounded-xl p-8 sm:min-h-56 sm:max-w-[19rem] shrink-0 shadow-md flex justify-center md:justify-start items-start flex-col">
  <span class="text-2xl font-noto font-semibold">{title}</span>
	<p class="pt-4 md:text-lg">
		{body}
	</p>
</div>

