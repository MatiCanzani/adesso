---
interface Props {
  title: string;
  body: string;
  id?: number | string;
}

const { title, body, id } = Astro.props;
---

<div
  class="bg-quaternary w-full border-none rounded-xl p-8 sm:min-h-56 sm:max-w-[18rem] shrink-0 flex justify-center md:justify-start items-start flex-col drop-shadow-xl card"
>
  <span class="text-2xl font-semibold">{title}</span>
  <p class="pt-4 md:text-lg">
    {body}
  </p>
</div>
