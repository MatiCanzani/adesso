---
import { Image } from "astro:assets";
// import { object } from "astro:schema";

interface Props {
  title: string;
  description: string;
  date: string;
  width?: string;
  height?: string;
  link: string;
  imageSrc?: string | null;
}

const { title, date, description, link, imageSrc } = Astro.props;

---

<a href={link}>
  <div class="mx-auto lg:w-full p-4">
    <div
      class="bg-white shadow-md border border-gray-200 rounded-lg max-w-2xl mx-auto"
    >
      {
        imageSrc && (
          <Image
            src={imageSrc}
            alt="Blog image cover"
            width={400}
            height={250}
            class="object-contain rounded-xl shadow-md m-6 w-full h-full"
          />
        )
      }
    </div>
    <div class="p-5">
      <p class="font-normal text-gray-700 mb-3">
        {date}
      </p>
      <h5
        class="text-gray-900 font-bold text-2xl tracking-tight mb-2"
        transition:name={title}
      >
        {title}
      </h5>
    </div>
    <p class="font-normal text-gray-700 mb-3">
      {description}
    </p>
  </div>
</a>
