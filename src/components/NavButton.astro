---
interface Props {
  link: string;
  className?: string;
}

const { className, link } = Astro.props as Props;
const currentPath = Astro.url.pathname;
const isActive = currentPath === link;
---

<a
  href={link}
  class:list={[
    `font-oxygen font-light capitalize mx-2.5 transition-all duration-300 ease-in-out group ${className ?? ""}`,
  ]}
>
 <span class="relative inline-block">
  <span
    class:list={[
      "absolute left-1/2 bottom-0 h-[2px] transition-all duration-300 ease-out -translate-x-1/2",
      isActive ? "w-full bg-tertiary" : "w-0 bg-tertiary group-hover:w-full"
    ]}
  ></span>
  <slot name="before" />
  <slot>Text for a link page</slot>
  <slot name="after" />
 </span>
</a>
